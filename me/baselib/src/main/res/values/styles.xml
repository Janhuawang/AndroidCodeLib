<resources>
    <!--
    #主题：
    1.Theme.AppCompat.Light.NoActionBar 会用ToolBar替代ActionBar
    2.Theme.AppCompat.Light.DarkActionBar
    -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item><!-- Toolbar 背景颜色 -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item><!-- 状态栏 背景颜色 -->
        <item name="colorAccent">@color/colorAccent</item><!-- UI控件如：复选框和文本 -->
        <item name="android:windowBackground">@color/colorWindowBackground</item><!-- 布局背景 -->
        <item name="android:textColorPrimary">@color/colorToolbarPrimary
        </item> <!-- Toolbar Title文字的颜色 -->
        <item name="android:textColorSecondary">@color/colorToolbarSecondary
        </item><!-- Toolbar 右上角三个点的颜色 -->
        <item name="colorButtonNormal">@color/colorButtonNormal</item><!-- 按钮标准色 -->
    </style>

    <!--Toolbar风格-->
    <style name="BaseToolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:textColorPrimary">@color/colorToolbarTextColorPrimary</item>
        <item name="android:theme">@style/ToolbarTheme</item>
        <item name="popupTheme">@style/ToolbarPopupTheme</item>
    </style>

    <!-- Toolbar菜单 -->
    <style name="ToolbarPopupTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/background_color_ee</item>
        <item name="android:textColor">@color/text_color_21</item>
    </style>

    <!-- Toolbar样式 -->
    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="actionMenuTextColor">@color/text_color_21</item>
        <item name="android:textColorPrimary">@color/text_color_21</item>
        <item name="colorControlHighlight">@color/ripple</item>
    </style>

</resources>
